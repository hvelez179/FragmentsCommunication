<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:id="@+id/userImg"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:id="@+id/userNameRecycleTv"
                android:layout_toRightOf="@id/userImg"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="top"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/userAddressRecycleTv"
                android:layout_toRightOf="@id/userImg"
                android:layout_below="@id/userNameRecycleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mikddle"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/userEmailRecycleTv"
                android:layout_toRightOf="@id/userImg"
                android:layout_below="@id/userAddressRecycleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bottom"
                android:layout_margin="5dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>